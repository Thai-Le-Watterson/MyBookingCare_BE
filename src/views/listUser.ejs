<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous"
        />
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
        />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <style>
            h1 {
                text-align: center;
            }

            table {
                border-collapse: collapse;
                width: 100%;
            }

            th,
            td {
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            th {
                background-color: #04aa6d;
                color: white;
            }

            td a {
                display: inline-block;
                padding: 6px 10px;
                background-color: cornflowerblue;
                color: white;
                border-radius: 6px;
            }

            td a:hover {
                color: white;
                text-decoration: none;
                opacity: 0.8;
            }
        </style>

        <nav class="navbar navbar-inverse" style="padding: 0">
            <div class="container-fluid" style="justify-content: left">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">WebSiteName</a>
                </div>
                <ul
                    class="nav navbar-nav"
                    style="display: -webkit-box; -webkit-box-orient: horizontal"
                >
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/crud">Crud</a></li>
                    <li><a href="/list-user">List User</a></li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <h1 class="col-12">LIST USER</h1>

                <table class="col-12">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Gender</th>
                        <th>RoleID</th>
                        <th>Upadte</th>
                    </tr>

                    <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.fullName%></td>
                        <td><%= user.email%></td>
                        <td><%= user.phonenumber%></td>
                        <td><%= user.address%></td>
                        <td><%= user.gender === true ? "Nam" : "Ná»¯"%></td>
                        <td><%= user.roleId%></td>
                        <td>
                            <a href="update-user/<%= user.id%>">Edit</a>
                            <a href="crud-delete/<%= user.id%>">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </table>
            </div>
        </div>

        <script
            src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
